<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:rkw_authors/Resources/Private/Language/locallang_db.xlf:flexform.contactBox.sheetTitle</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.headline>
						<TCEforms>
							<label>LLL:EXT:rkw_authors/Resources/Private/Language/locallang_db.xlf:flexform.contactBox.headline</label>
							<config>
								<type>input</type>
								<size>50</size>
								<max>50</max>
								<eval>trim</eval>
							</config>
						</TCEforms>
					</settings.headline>
					<settings.text>
						<TCEforms>
							<label>LLL:EXT:rkw_authors/Resources/Private/Language/locallang_db.xlf:flexform.contactBox.text</label>
							<config>
								<type>text</type>
								<cols>50</cols>
								<rows>5</rows>
							</config>
						</TCEforms>
					</settings.text>
					<settings.contactLink>
						<TCEforms>
							<exclude>1</exclude>
							<label>LLL:EXT:rkw_authors/Resources/Private/Language/locallang_db.xlf:flexform.contactBox.contactLink</label>
							<config>
                                <type>input</type>
                                <renderType>inputLink</renderType>
                                <size>30</size>
                                <eval>trim</eval>
                                <softref>typolink</softref>
							</config>
						</TCEforms>
					</settings.contactLink>
					<settings.linkText>
						<TCEforms>
							<label>LLL:EXT:rkw_authors/Resources/Private/Language/locallang_db.xlf:flexform.contactBox.linkText</label>
							<config>
								<type>input</type>
								<size>50</size>
								<max>50</max>
								<eval>trim</eval>
							</config>
						</TCEforms>
					</settings.linkText>
					<settings.author1>
						<TCEforms>
							<label>LLL:EXT:rkw_authors/Resources/Private/Language/locallang_db.xlf:flexform.contactBox.author1</label>
							<config>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<type>select</type>
                                <renderType>selectSingle</renderType>
								<foreign_table>tx_rkwauthors_domain_model_authors</foreign_table>
								<foreign_table_where>
									AND tx_rkwauthors_domain_model_authors.deleted = 0 AND tx_rkwauthors_domain_model_authors.hidden = 0 ORDER BY tx_rkwauthors_domain_model_authors.internal DESC, tx_rkwauthors_domain_model_authors.last_name ASC
                                </foreign_table_where>
								<items type="array">
									<numIndex index="100">
										<numIndex index="0">---</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.author1>
					<settings.author2>
						<TCEforms>
							<label>LLL:EXT:rkw_authors/Resources/Private/Language/locallang_db.xlf:flexform.contactBox.author2</label>
							<config>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<type>select</type>
                                <renderType>selectSingle</renderType>
								<foreign_table>tx_rkwauthors_domain_model_authors</foreign_table>
								<foreign_table_where>
									AND tx_rkwauthors_domain_model_authors.deleted = 0 AND tx_rkwauthors_domain_model_authors.hidden = 0 ORDER BY tx_rkwauthors_domain_model_authors.internal DESC, tx_rkwauthors_domain_model_authors.last_name ASC
